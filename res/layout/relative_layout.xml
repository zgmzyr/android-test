<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#440000" >

    <TextView
        android:id="@+id/view1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FF0000"
        android:text="第一个文本View" />

    <TextView
        android:id="@+id/view2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/view1"
        android:background="#00FF00"
        android:text="第二个文本View" />

    <TextView
        android:id="@+id/seperationLine1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view2"
        android:background="#FF0000"
        android:text="分隔线1" />

    <TextView
        android:id="@+id/view3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/seperationLine1"
        android:background="#0000FF"
        android:text="第三个文本View" />

    <TextView
        android:id="@+id/view4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/view3"
        android:layout_alignRight="@id/view3"
        android:background="#00FF00"
        android:text="第四个" />

    <TextView
        android:id="@+id/seperationLine2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view4"
        android:background="#00FF00"
        android:text="分隔线2" />

    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/seperationLine2"
        android:background="#FF0000" >

        <TextView
            android:id="@+id/view5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00FF00"
            android:textSize="40sp"
            android:text="Hello" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/view5"
            android:layout_alignBaseline="@id/view5"
            android:background="#0000FF"
            android:text="abc" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/rl1"
        android:background="#AA0000" >

        <TextView
            android:id="@+id/view6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="#00FF00"
            android:text="Hello" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:background="#0000FF"
            android:text="abc" />
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/rl3"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/rl2"
        android:background="#880000" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="#00FF00"
            android:text="Hello" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="#0000FF"
            android:text="abc" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="#0000FF"
            android:text="abc" />
    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/rl3"
        android:background="#FF0000"
         >
       <TextView 
           android:id="@+id/view_a"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:background="#00FF00"
           android:text="abcdefgh"
           /> 
       <TextView 
           android:id="@+id/view_b"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignEnd="@id/view_a"
           android:layout_below="@id/view_a"
           android:background="#0000FF"
           android:text="ijklsssssssssssssss"
           /> 
           
       <TextView 
           android:id="@+id/veiw_c"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@id/view_b"
           android:background="#0000FF"
           android:text="opqrst"
           /> 
       <TextView 
           android:id="@+id/veiw_d"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentEnd="true"
           android:background="#0000FF"
           android:text="uvwxyz"
           /> 
       
    </RelativeLayout>
</RelativeLayout>